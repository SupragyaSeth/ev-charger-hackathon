generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  queues    Queue[]  // relation to Queue entries
}

model Charger {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  location  String?
  queues    Queue[]
}

model Queue {
  id         Int      @id @default(autoincrement())
  position   Int
  createdAt  DateTime @default(now())

  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  chargerId  Int
  charger    Charger  @relation(fields: [chargerId], references: [id])
}

